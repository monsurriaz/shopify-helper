    flex-shrink: 0;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #fff;
    border: 3px solid #fff;
    box-sizing: border-box;
    box-shadow: 0 0 0 2px rgba(0, 0, 0, .3);
