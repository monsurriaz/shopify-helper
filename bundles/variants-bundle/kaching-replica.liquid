<script>
  // select quantity
  document.addEventListener('click', function (e) {
    // Check if the clicked element is a radio input inside `.variants-bundle__bars`
    if (e.target.matches('.variants-bundle__bars input[type="radio"]')) {
      // Remove the selected class from all `.variants-bundle__bar.bundle-bar__selected`
      document
        .querySelector('.variants-bundle__bar.bundle-bar__selected')
        .classList.remove('bundle-bar__selected');
      
      // Match the real variant to the selected
      var dataIdValue = e.target.getAttribute('data-id');
      let matched = document.querySelector(`#variant_wrapper input[value="${dataIdValue}"]`);
      matched.click();

      // Add the selected class to the closest `.variants-bundle__bar` of the clicked radio
      var parentBar = e.target.closest('.variants-bundle__bar');
      if (parentBar) {
        parentBar.classList.add('bundle-bar__selected');
      }
    }
  });
</script>
