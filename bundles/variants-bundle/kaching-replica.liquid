    font-weight: 500;
    color: #000000;
  }
  .variants-bundle__bar-subtitle span {
    color: #135D4B;
    font-weight: 600;
    display: inline-block;
  }
  .variants-bundle__bar .variants-bundle__bar-pricing {
    align-items: flex-end;
    display: flex;
    flex-direction: column;
  }
  .variants-bundle__bar .variants-bundle__bar-price {
    font-size: 19px;
    font-weight: bold;
    color: #000000;
  }
  .variants-bundle__bar .variants-bundle__bar-fullprice {
    font-size: 14px;
    font-weight: 500;
    color: #000;
    text-decoration: line-through;
  }
  .variants-bundle__bars .bundle-bar__selected .variants-bundle__bar-container {
    cursor: default;
    background-color: rgba(255, 251, 241);
    box-shadow: inset 0 0 0 2px #135d4b;
  }
