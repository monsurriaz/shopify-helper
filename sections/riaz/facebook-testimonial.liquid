<script>
  // Function to initialize the Splide slider
  function initSplideSlider() {
    var perPageDesktop = {{ section.settings.columns_desktop }}, perPageTab = 2, perPageMobile = 1;
    var sliderElement = document.querySelector('#facebook-temtimonial-splide-{{ section.id }}');
    var slideCount = sliderElement.querySelectorAll('.splide__slide').length;

    // Logic to check the number of slides and conditionally show arrows
    var showArrowsDesktop = slideCount > perPageDesktop;
    var showArrowTab = slideCount > perPageTab;
    var showArrowsMobile = slideCount > perPageMobile;

    new Splide(sliderElement, {
      perPage: perPageDesktop,
      arrows: showArrowsDesktop,
      drag: showArrowsDesktop,
      pagination: showArrowsDesktop,
      type   : '{{section.settings.type}}',
      perMove: {{section.settings.per_move_desktop}},
      autoplay: {{section.settings.autoplay}},
      speed: {{section.settings.autoplay_speed}} * 1000,
      padding: { left: '{{section.settings.desktop_spacing}}px', right: '{{section.settings.desktop_spacing}}px' },
      // Responsive breakpoints for mobile and tablet
      breakpoints: {
        991: {
          perPage: perPageTab,
          perMove: 1,
          arrows: showArrowTab,
          drag: showArrowTab,
          pagination: showArrowTab
        },
        768: {
          perPage: perPageMobile,
          perMove: 1,
          arrows: showArrowsMobile,
          drag: showArrowsMobile,
          pagination: showArrowsMobile
        }
      }
    }).mount();
  }

  // Call the function to initialize the slider
  document.addEventListener('DOMContentLoaded', function() {
    initSplideSlider();
  });

  {% if request.design_mode %}
    document.addEventListener('shopify:section:select', initSplideSlider);
    document.addEventListener('shopify:section:load', initSplideSlider);
    document.addEventListener('shopify:section:unload', initSplideSlider);
    document.addEventListener('shopify:block:select', initSplideSlider);
  {% endif %}
</script>

