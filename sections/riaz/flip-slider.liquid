{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    --accent-color: {{ section.settings.card_flip_bg }};
  }

  /*Ingradiants */
  .section-gradiant {
    background-image: {{ section.settings.bg_gradient }};
    background-color: {{ section.settings.bg_color }};
  }
  .text-center {
    text-align: center;
  }
  .d-flex {
    display: flex;
  }
  .align-center {
    align-items: center;
  }
  .main-wrapper {
    flex-wrap: wrap;
  }
  .ingredient-card-flip-wrapper .main-wrapper__item {
    min-width: 50%;
    max-width: 50%;
  }
  .ingredient-card-flip-wrapper .info-wrapper {
    padding: 30px 45px;
  }
  .info-wrapper.info-wrapper-mobile {
    padding: 0px;
  }

  @media (max-width: 768px) {
    .ingredient-card-flip-wrapper {
      flex-direction: column;
    }
    .ingredient-card-flip-wrapper .main-wrapper__item {
      min-width: 100%;
      max-width: 100%;
    }
  }

