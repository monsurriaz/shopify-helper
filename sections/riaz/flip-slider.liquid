    background: #ffebf0;
  }

  .swiper-flip button.card-flip svg {
    width: 20px;
    height: auto;
  }

  .swiper-flip button.card-flip svg path {
    fill: {{ section.settings.card_flip_icon }};
  }

  @media (max-width: 768px) {
    .swiper-flip button.card-flip svg {
      width: 12px;
    }
  }

