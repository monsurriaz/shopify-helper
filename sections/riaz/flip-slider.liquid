<script>
  window.addEventListener('DOMContentLoaded', function () {
    var section_id = '#ingredient-slider-{{ section.id }}';

    var flipSwiper = new Swiper(section_id, {
      grabCursor: false,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true
      },
      loop: false,
      effect: "creative",
      slidesPerView: 1.5,
      loopedSlides: 1.5,
      observer: true,
      creativeEffect: {
        limitProgress:2,
        prev: {
          shadow: true,
          translate: ["-105%", 0, -426],
        },
        next: {
          shadow: true,
          translate: ["20%", 0, -250],
          translate: ["40%", 0, -245],
        },
      },
      breakpoints: {
        640: {
          slidesPerView: 1.25,
          slidesPerView: 1.50,
          spaceBetween: 0,
        }
      }
    });

    flipSwiper.on('slideChangeTransitionEnd', () => {
      document.querySelectorAll(section_id +'.swiper-flip .swiper-slide:not(.swiper-slide-active) .ingredient-flip-card.flipped')
      .forEach((fItem) => {
        fItem.classList.remove('flipped');
      })
    })

    const ingredientCardFlip = () => {
      document.querySelectorAll(".card-flip-trigger").forEach((trigger) => {
        trigger.addEventListener("click", () => {
          trigger.closest(".swiper-slide-active") && trigger.closest(".ingredient-flip-card").classList.toggle("flipped");
        });
      });
    };

    ingredientCardFlip();

    if (Shopify.designMode) {
      document.addEventListener('shopify:section:load', ingredientCardFlip);
      document.addEventListener('shopify:section:reorder', ingredientCardFlip);
    }
  });
</script>

<script>
  // Utility Functions
  const show = (el) => el.classList.add("active");
  const hide = (el) => el.classList.remove("active");
  
  // Elements
  const flipPopup = document.querySelector(".flip-popup");
  const flipOverlay = document.querySelector(".flip-overlay");
  const popupOpener = document.querySelectorAll(".flip-popup-open");
  const flipClose = document.querySelector(".quick-view-close");
  
  // Open popup
  popupOpener.forEach(btn => {
    btn.addEventListener("click", () => {
      show(flipPopup);
      document.querySelector('body').classList.add('popup_active');
    });
  });
  
  // Close popup on close button click
  flipClose.addEventListener("click", () => {
    hide(flipPopup);
    document.querySelector('body').classList.remove('popup_active');
  });
  
  // Close popup when clicking outside the popup
  flipOverlay.addEventListener("click", (event) => {
    if (event.target === flipOverlay) { // Ensures only overlay click closes it
      hide(flipPopup);
      document.querySelector('body').classList.remove('popup_active');
    }
  });
</script>


