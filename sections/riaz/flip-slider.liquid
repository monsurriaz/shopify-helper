    border-radius: 20px;
  }

  .swiper-flip .swiper-slide-active {
    padding: 0 2px 2px 0;
  }

  .swiper-flip .swiper-item-wrapper {
    border-radius: 20px;
    transform-style: preserve-3d;
    transition: transform .5s linear;
  }

  .swiper-flip .swiper-slide-active .swiper-item-wrapper {
    box-shadow: 0 2px 2px #0003;
  }

  .swiper-flip .swiper-item-wrapper.flipped {
    transform: rotateY(180deg);
  }

