    overflow: hidden !important;
  }


  /* Section ingredients card flip */

  .swiper-flip .swiper-item-wrapper {
    position: relative;
  }

  .swiper-flip .swiper-item-footer {
    align-items: center;
    justify-content: space-between;
    font-size: 14px;
    line-height: 1.6;
    padding: 15px;
    box-sizing: border-box;
    font-weight: 600;
    text-align: left;
  }
  .swiper-flip .swiper-item-footer .swiper-item-info {
    width: calc(100% - 50px);
    word-break: break-all;
  }
  .swiper-flip .swiper-item-footer p {
    margin: 0;
    color: #000;
    text-transform: uppercase;
  }
  .swiper-flip .swiper-item-footer span {
    display: block;
    font-weight: normal;
    text-transform: capitalize;
    color: #333;
  }

  .ingredient-card-front figure.image {
    margin: 0px;
  }

