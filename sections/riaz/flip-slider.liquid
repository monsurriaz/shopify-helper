  }

  .swiper-slide-shadow {
    background: transparent !important;
  }

  /*Swiper global*/
  .swiper--has-primary-pagination .swiper-pagination {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    position: relative;
    top: unset;
    right: unset;
