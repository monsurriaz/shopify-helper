    aspect-ratio: 1 / 0.76;
  }

  .swiper-flip button.card-flip {
    background: {{ section.settings.card_flip_bg }};
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    padding: 0px;
    transition: all .3s ease;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .swiper-flip .swiper-pagination {
      width: fit-content !important;
    }
  }

