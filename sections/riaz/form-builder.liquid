{%- style -%}
  div#shop-hcaptcha-badge-container {
    display: none;
  }
  .section-{{ section.id }}-padding {
    max-width: {{section.settings.section-width}}rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding: 0 5rem;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .mr-form-builder-{{ section.id }} {
    background-color:{{section.settings.background-color}};
  }

  .mr-form-builder-{{ section.id }} .mr-form__builder-title {
    color:{{ section.settings.header_color }};
    text-align: {{ section.settings.text_align }};
    font-size:{{ section.settings.font_size_title }}px;
  }

  .mr-form-builder-{{ section.id }} .mr-form__builder-text {
    color:{{ section.settings.header_color }};
    text-align: {{ section.settings.text_align }};
    margin-bottom: 20px;
  }

  .mr-form-builder-{{ section.id }} .mr-form__input-wrapper {
    display: flex; 
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .mr-form-builder-{{ section.id }} .mr-form__input-item.hide:not(.show) {
    display: none;
  }

  .mr-form-builder-{{ section.id }} label {
    color: {{section.settings.field_title_color}};
    font-size: {{section.settings.font_size_label}}px;
    line-height: 1;
    margin-bottom: 10px;
    font-weight: 600;
  }

  .mr-form-builder-{{ section.id }} label span {
    color: red;
    font-weight: 700;
  }

  .mr-form-builder-{{ section.id }} .ss-form-field {
    border: 1px solid {{section.settings.field_border_color}};
    outline: none;
    color: {{ section.settings.field_title_color }};
    margin: 0;
    width: 100%;
    padding:15px 10px;
    display: block;
    margin-bottom: 20px;
    background: #fff;
    font-size: {{section.settings.font_size_placeholder}}px;
    line-height:1.3;
    border-radius: {{section.settings.input_border_radius}}px;
    font-family: var(--font-body-family);
  } 

  @media screen and (min-width: 750px) {
    .mr-form-builder-{{ section.id }} .ss-form-field {
      padding: 15px;
    }
  }

  .mr-form-builder-{{ section.id }} .ss-form-field:focus {
    outline: none;
    box-shadow: none;
    /* Add any other properties you want to override */
  }

  .mr-form-builder-{{ section.id }} .ss-form-field::placeholder { /* Most modern browsers support this */
    font-size: {{section.settings.font_size_placeholder}}px;
    color: {{ section.settings.field_color }}; /* Change to desired color */
    opacity: 1; /* Firefox requires this to not be 0 */
  }
  
  .mr-form-builder-{{ section.id }} .ss-form-field::-ms-input-placeholder { /* Internet Explorer 10-11 */
    font-size: {{section.settings.font_size_placeholder}}px;
    color: {{section.settings.field_color}};
  }
  
  .mr-form-builder-{{ section.id }} .ss-form-field::-ms-input-placeholder { /* Microsoft Edge */
    font-size: {{section.settings.font_size_placeholder}}px;
    color: {{section.settings.field_color}};
  }

  .mr-form__input-item-checkbox {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 20px;
    position: relative;
  }

  .mr-form__input-item-checkbox input.ss-form-field-checkbox {
    width: 0.99px;
    margin: 0;
    height: 15px;
  }

  .mr-form__input-item-checkbox input.ss-form-field-checkbox::after {
    position: absolute;
    content: "";
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .mr-form__input-item-checkbox label.input-item__checkbox-label {
    margin: 0;
    font-weight: 400;
    position: relative;
    padding-left: 30px;
    cursor: pointer;
    user-select: none;
    line-height: 1.25;
  }

  .ss-form-field.ss-form-field-select {
    height: 53px;
    min-height: 53px; /* Ensures the height is at least 53px */
    appearance: none; /* Removes default styles for better customization */
    -webkit-appearance: none; /* For Safari on iOS */
    -moz-appearance: none; /* For Firefox on mobile */
  }

  @media only screen and (max-device-width: 812px) and (-webkit-min-device-pixel-ratio: 2) {
    .ss-form-field.ss-form-field-select {
      height: 53px;
    }
  }

  .mr-form__input-item-checkbox label.input-item__checkbox-label::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 20px;
    height: 20px;
    background-color: #f0f0f0; /* Unchecked background */
    border: 2px solid #ccc;
    border-radius: 4px;
    transition: 0.3s;
  }

  .mr-form__input-item-checkbox label.input-item__checkbox-label::after {
    content: '';
    position: absolute;
    top: 3px;
    left: 6px;
    width: 8px;
    height: 11px;
    border: solid #000; /* Color of the tick mark */
    border-width: 0 2px 2px 0;
    opacity: 0;
    transform: rotate(45deg);
    transition: opacity 0.3s;
  }

  input.ss-form-field-checkbox:checked + label.input-item__checkbox-label::after {
    opacity: 1;
  }

  .mr-form-builder-{{ section.id }} .ss-text-area {
    height: 150px;
  }

  .mr-form-builder-{{ section.id }} .mr-form__input-item-messagebox {
    margin-bottom: 20px;
    display: flex;
    column-gap: 10px;
    align-items: center;
    padding: 15px;
    border-radius: 9px;
  }

  .mr-form-builder-{{ section.id }} .mr-form__input-item-messagebox img {
    width: 25px;
    height: auto;
  }

  .mr-form-builder-{{ section.id }} .message-box__content {
    display: flex;
    flex-direction: column;
  }

  .mr-form-builder-{{ section.id }} .message-box__text {
    font-size: 14px;
    font-weight: 600;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }

  .mr-form-builder-{{ section.id }} .message-box__subtitle {
    font-size: 12px;
    line-height: 1.2;
    margin-top: 3px;
  }

  .mr-form-builder-{{ section.id }} .submit-button-wrapper {
    display:flex;
    width:100%;
    {% if section.settings.text_align == "center" %}
      justify-content:center;
    {% endif %}
  }
  
  .mr-form-builder-{{ section.id }} .ss-submit-button {
    height: {{ section.settings.button_height }}px;
    {% if section.settings.button_full_width %}
      width: 100%;
    {% else %}
      width: {{ section.settings.button_width }}px;
    {% endif %}
    color: {{ section.settings.button_color }};
    background: {{ section.settings.button_background_color }};
    font-size: {{ section.settings.button_font_size | times: 0.85 }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.button_border_thickness }}px {{ section.settings.button_border_color }} solid;
    display: inline-block;
    font-weight: 700;
    text-decoration: none;
    cursor: pointer;
    margin-bottom: 20px;
    line-height: 1;
    padding: 0 10px! important;
    -webkit-appearance: none;
  }

  .mr-form-builder-{{ section.id }} .ss-submit-button:hover {
    color: {{ section.settings.button_color_hover }};
    background: {{ section.settings.button_background_color_hover }};
  }
{%- endstyle -%}

<div class="mr-form-builder-{{ section.id }} animate-section animate--hidden">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="mr-form__builder-inner">
      {% if section.settings.title != blank %}
        <h1 class="mr-form__builder-title">
          {{section.settings.title}}
        </h1>
      {% endif %}
      
      {% if section.settings.text != blank %} 
        <div class="mr-form__builder-text">
          {{ section.settings.text }}
        </div>
      {% endif %}
      
      {% form 'contact', class: 'mr-form__builder-form' %}
        {% comment %}
        Successful message 
        {% endcomment %}
        {% if form.posted_successfully? %}
          <p class="note form-success">
            {{ section.settings.form_success }}
          </p>
          {% if section.settings.redirect_url != blank %}
            <script>window.location.href="{{ section.settings.redirect_url }}"</script>
          {% endif %}
        {% endif %}
        
        {{ form.errors | default_errors }}
        
        <div class="mr-form__input-wrapper">
          {% assign idx = 0 %}
          {% for block in section.blocks %}
            {% assign bs = block.settings %}
            {% unless bs.enable_condition %}
              {% assign idx = idx | plus: 1 %}
            {% endunless %}
            <div 
              class="mr-form__input-item{% if bs.enable_condition %} hide{% endif %} animate-item animate-item--child{% if bs.enable_condition and bs.condition_key != blank %} {{bs.condition_key}}{% endif %}" 
              style="width: {% if bs.width == 'half' %}49{% else %}100{% endif %}%;--index: {{idx}}" {{ block.shopify_attributes }}
            >
              {% if block.type == 'text' %}
                <div class="mr-form__input-item-{{ block.type }}">
                
                  {% if bs.type == 'text' %}
                    {% if bs.use_label %}
                      <label for="ContactFormName-{{ bs.title }}">
                        {{ bs.title }}{% if bs.required and bs.title != blank %} <span>*</span>{% endif %}
                      </label>
                    {% endif %}
                    <input 
                      class="ss-form-field" 
                      type="text" 
                      id="ContactFormName-{{ bs.title }}" 
                      name="contact[{{bs.title | handleize}}]" 
                      placeholder="{% if bs.placeholder != blank %}{{bs.placeholder}}{% endif %}" 
                      autocapitalize="words" 
                      value="" 
                      {% if bs.required and bs.enable_condition == false %}required{% endif %}
                    >
                  
                  {% elsif bs.type == 'email' %}

                    {% if bs.use_label %}
                      <label for="ContactFormEmail-{{bs.title}}">
                        {{ bs.title }}{% if bs.required %} <span>*</span>{% endif %}
                      </label>
                    {% endif %}
                    <input 
                      class="ss-form-field" 
                      type="email" 
                      id="ContactFormEmail-{{bs.title}}" 
                      name="contact[email]" 
                      placeholder="{% if bs.placeholder != blank %}{{bs.placeholder}}{% endif %}" 
                      autocorrect="off" 
                      autocapitalize="off" 
                      value="" 
                      {% if bs.required and bs.enable_condition == false %}required{% endif %}
                    >
                  
                  {% elsif bs.type == 'tel' %}

                    {% if bs.use_label %}
                      <label for="ContactFormPhone-{{ bs.title }}">
                        {{ bs.title }}{% if bs.required %} <span>*</span>{% endif %}
                      </label>
                    {% endif %}
                    <input 
                      class="ss-form-field" 
                      type="tel" 
                      id="ContactFormPhone-{{ bs.title }}" 
                      name="contact[{{bs.title | handleize}}]" 
                      placeholder="{% if bs.placeholder != blank %}{{bs.placeholder}}{% endif %}" 
                      pattern="[0-9\-]*" value="" 
                      {% if bs.required %}required{% endif %}
                    />
                  {% endif %}      
                </div>

              {% elsif block.type == 'textarea' %}

                <div class="mr-form__input-item-{{ block.type }}">
                  {% if bs.use_label %}
                    <label for="ContactFormMessage-{{ bs.title }}">
                      {{bs.title}}{% if bs.required %} <span>*</span>{% endif %}
                    </label>
                  {% endif %}
                  <textarea 
                    class="ss-form-field ss-text-area" 
                    id="ContactFormMessage-{{ bs.title }}" 
                    name="contact[{{bs.title | handleize}}]" 
                    placeholder="{{ bs.placeholder }}" 
                    {% if bs.required and bs.enable_condition == false %}required{% endif %}></textarea>
                </div>

              {% elsif block.type == 'dropdown' %}
                <div class="mr-form__input-item-{{ block.type }}">
                  {% assign options = bs.dropdown_options | strip | split: ',' %}

                  {% if bs.use_label %}
                  <label for="ContactFormDropdown-{{ bs.title | handleize }}">
                    {{bs.title}}{% if bs.required %} <span>*</span>{% endif %}
                  </label>
                  {% endif %}

                  <select 
                    class="ss-form-field ss-form-field-select" 
                    {% if bs.required %}required{% endif %} 
                    id="ContactFormDropdown-{{ bs.title | handleize }}" 
                    name="contact[{{ bs.title | handleize }}]"
                  >
                    {% if bs.placeholder %}
                      <option disabled selected>{% if bs.placeholder != blank %}{{bs.placeholder}}{% endif %}</option>
                    {% endif %}

                    {% for option in options %}
                      {% assign value = option | strip | split: '#' | first %}
                      {% assign data_id = option | strip | split: '#' | last %}
                      <option 
                        {% if option contains '#' %}data-id="{{ data_id }}"{% endif %}
                        value="{{- value -}}">
                        {{- value -}}
                      </option>
                    {% endfor %}
                  </select>
                </div>

              {% elsif block.type == 'message' %}
                <div class="mr-form__input-item-{{ block.type }} custom-message-{{ block.id }}" style="margin-bottom: 20px">
                  {{ bs.message }}
                  <style>
                    .custom-message-{{ block.id }} p {
                      font-size:{{ bs.font_size }}px;
                      margin:0;
                      line-height:1.3;
                    }
                  </style>
                </div>

              {% elsif block.type == 'checkbox' %}
                <div class="mr-form__input-item-{{ block.type }} form-field-checkbox-{{ block.id }}">
                  <input 
                    class="ss-form-field-checkbox" 
                    type="checkbox" 
                    id="ContactFormCheck-{{ bs.identifier | handleize }}" 
                    name="contact[{{ bs.identifier | handleize }}]" 
                    {% if bs.required and bs.enable_condition == false %}required{% endif %}>
                  <label for="ContactFormCheck-{{ bs.identifier | handleize }}" class="input-item__checkbox-label">
                    {{ bs.title }}{% if bs.required and bs.title != blank %} <span>*</span>{% endif %}
                  </label>
                  <style>
                    .form-field-checkbox-{{ block.id }} input:checked + .input-item__checkbox-label::before {
                      background-color: {{ bs.checkbox_bg_color }}; /* Checked background */
                      border-color: {{ bs.checkbox_bg_color }};
                    }
                    .form-field-checkbox-{{ block.id }} input:checked + .input-item__checkbox-label::after {
                      border-color: {{ bs.checkbox_tic_color }};
                    }
                  </style>
                </div>

              {% elsif block.type == 'messagebox' %}
                <div class="mr-form__input-item-{{ block.type }} id-{{ block.id }}">
                  {% if bs.icon != blank %}
                    <img src="{{ bs.icon | image_url: width: bs.icon.width }}" width="auto" height="auto" alt="messagebox-icon">
                  {% endif %}
                  <div class="message-box__content">
                    <div class="message-box__text">{{ bs.title }}</div>
                    <div class="message-box__subtitle">{{ bs.text }}</div>
                  </div>
                </div>
                <style>
                  .mr-form-builder-{{ section.id }} .mr-form__input-item-{{ block.type }}.id-{{ block.id }} {
                    background-color: {{ bs.bg_color }};
                    color: {{ bs.text_color }};
                  }
                </style>
              {% endif %}
            </div>
          {% endfor %}

          <div class="submit-button-wrapper">
            <input type="submit" class="ss-submit-button animate-item animate-item--child" style="--index: {{idx}}"
              value="{% if section.settings.submit_btn_label != blank%}{{ section.settings.submit_btn_label }}{% else %}Send{% endif %}">
          </div>
        </div>
      {% endform %}
    </div>
  </div>
</div>

<script>
  function toggleHideShow() {
    // Get the select element
    const selectElements = document.querySelectorAll(".ss-form-field-select");
    
    selectElements.forEach(selectElement => {
      // Add an event listener for the 'change' event
      selectElement.addEventListener("change", function () {
        // Get the selected option
        const selectedOption = selectElement.options[selectElement.selectedIndex];
  
        // Get the data-id attribute of the selected option
        const dataId = selectedOption.getAttribute("data-id");
  
        // remove current show option
        const currentShow = document.querySelectorAll('.mr-form__input-item.show');
        if (currentShow.length > 0) {
          currentShow.forEach(item => {
            item.classList.remove('show');
            const input = item.querySelector('.ss-form-field');
            if (input)
              input.removeAttribute('required');
          });
        }
  
        // Log or use the data-id
        if(dataId)
        {
          document.querySelectorAll(`.${dataId}`).forEach(item => {
            item.classList.add('show');
            const input = item.querySelector('.ss-form-field');
            if (input)
              input.setAttribute('required', 'true');
          });
        }
      });
    });
  }

  document.addEventListener("DOMContentLoaded", function() {
    toggleHideShow();
  });
</script>

