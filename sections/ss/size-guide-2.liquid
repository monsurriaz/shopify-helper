  <style>
    .size-modal-toggle-{{ section.id }} {
      font-family: {{ switch_font.family }}, {{ switch_font.fallback_families }};
      font-weight: {{ switch_font.weight }};
      font-style: {{ switch_font.style }};
    }
  </style>
{% endif %}

