    align-items: center;
    justify-content: space-between;
    overflow: hidden;
  }

  .feature-slider-{{ section.id }}.preview .feature-card-{{ section.id }} {
    width: 100%;
  }

  .feature-slider-{{ section.id }}.preview .feature-card-{{ section.id }}:not(:first-child) {
    margin-left: {{ slider_gap_mobile }}px;
  } 

  @media(min-width: 1024px) {
    .feature-slider-{{ section.id }}.preview .feature-card-{{ section.id }}:not(:first-child) {
      margin-left: {{ slider_gap }}px;
    } 

    .feature-slider-{{ section.id }}.preview .feature-card-{{ section.id }} {
      width: calc(100% / {{ slider_view }} - ({{ slider_gap }}px * {{ slider_view | minus: 1 }}));
    }
  }
