<div class="section-{{ section.id }} feature-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      
      <div class="feature-main-content-{{ section.id }}">
        {% if sub_heading != blank %}
          <div class="feature-subheading-{{ section.id }}">{{ sub_heading }}</div>
        {% endif %}
        
        {% if heading != blank %}
          <div class="feature-heading-{{ section.id }}">{{ heading }}</div>
        {% endif %}
  
        {% if text != blank %}
          <div class="feature-text-{{ section.id }}">{{ text }}</div>
        {% endif %}
      </div>

      <div class="feature-slider-wrapper-{{ section.id }}">
        <div class="feature-slider-{{ section.id }} swiper preview">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="feature-card-{{ section.id }} swiper-slide">
                <div class="feature-icon-{{ section.id }}">
                  {% if block.settings.icon != blank %}
                    <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.icon.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                </div>
                <div class="feature-content-{{ section.id }}">
                  {% if block.settings.title != blank %}
                    <p class="feature-title-{{ section.id }} feature-title-{{ block.id }}">{{ block.settings.title }}</p>
