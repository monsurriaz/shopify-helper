{%- style -%}

  {{  sub_heading_font | font_face: font_display: 'swap' }}
  {{  heading_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  title_font | font_face: font_display: 'swap' }}
  {{  card_text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .feature-main-content-{{ section.id }} {
    width: 100%;
    margin: 0px auto;
  }

  .feature-subheading-{{ section.id }} {
    text-align: {{ sub_heading_align_mobile }};
  }

  .feature-subheading-{{ section.id }} * {
    margin: 0;
    font-size: {{ sub_heading_size_mobile }}px;
    color: {{ sub_heading_color }};
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
  }

  .feature-heading-{{ section.id }} {
    margin-top: {{ heading_mt_mobile }}px;
    text-align: {{ heading_align_mobile }};
  }
  
  .feature-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .feature-text-{{ section.id }} {
    margin-top: {{ text_mt_mobile }}px;
    text-align: {{ text_align_mobile }};
  }
  
  .feature-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .feature-slider-wrapper-{{ section.id }} {
    margin-top: {{ slider_mt_mobile }}px;
    position: relative;
  }

  .feature-slider-{{ section.id }} {
    margin-left: -{{ padding_horizontal_mobile }}rem !important;
    margin-right: -{{ padding_horizontal_mobile }}rem !important;
    padding-left: {{ padding_horizontal_mobile }}rem !important;
    padding-right: {{ padding_horizontal_mobile }}rem !important;
  }

  .feature-slider-{{ section.id }} .swiper-wrapper {
    align-items: stretch !important;
  }

  .feature-card-{{ section.id }} {
    height: auto !important;
    display: flex !important;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box !important;
    padding: {{ card_padding_vertical_mobile }}px {{ card_padding_horizontal_mobile }}px;
    border-radius: {{ card_radius }}px;
    border: {{ card_border_thickness }}px solid {{ card_border_color }};
    background-color: {{ card_bg_color }};
  }

  .feature-icon-{{ section.id }} {
    width: 100%;
    max-width: {{ icon_width_mobile }}%;
  }

  .feature-icon-{{ section.id }} img,
  .feature-icon-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .feature-icon-{{ section.id }} svg {
    background-color: #AFAFAF;
  }
  
  .feature-title-{{ section.id }} {
    margin: 0;
    width: 100%;
    margin-top: {{ title_mt_mobile }}px;
    text-align: {{ title_align_mobile }};
    font-size: {{ title_size_mobile }}px;
    line-height: {{ title_height }}%;
    text-transform: unset;
    font-weight: 700;
    word-break: break-word;
  }

  .feature-card-text-{{ section.id }} {
    margin: 0;
    width: 100%;
    margin-top: {{ card_text_mt_mobile }}px;
    text-align: {{ card_text_align_mobile }};
    font-size: {{ card_text_size_mobile }}px;
    line-height: {{ card_text_height }}%;
    text-transform: unset;
    word-break: break-word;
  }
 
  .feature-btn-prev-{{ section.id }},
  .feature-btn-next-{{ section.id }} {
    position: absolute;
    z-index: 2;
    top: 40%;
    transform: translateY(-50%);
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: 50%;
    background: transparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    padding: 0px;
  }

  .feature-btn-prev-{{ section.id }} {
    left: 0px !important;
  }

  .feature-btn-next-{{ section.id }} {
    right: 0px !important;
  }

  .feature-btn-prev-{{ section.id }} svg,
  .feature-btn-next-{{ section.id }} svg {
    height: {{ arrow_icon_size_mobile }}px;
    flex: 0 0 {{ arrow_icon_size_mobile }}px;
  }

  .feature-btn-next-{{ section.id }} svg {
    transform: rotate(180deg);
    margin-left: 2px;
  }

  .feature-btn-prev-{{ section.id }} svg {
    margin-left: -2px;
  }

  .feature-btn-prev-{{ section.id }} svg path,
  .feature-btn-next-{{ section.id }} svg path {
    fill: {{ arrow_color }};
    transition: all 0.3s ease 0s;
  }

  .feature-btn-prev-{{ section.id }}:hover ,
  .feature-btn-next-{{ section.id }}:hover {
    transition: all 0.3s ease 0s;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
    background: {{ arrow_bg_hover_color }};
  }

  .feature-btn-prev-{{ section.id }}:hover svg path,
  .feature-btn-next-{{ section.id }}:hover svg path {
    fill: {{ arrow_hover_color }};
    transition: all 0.3s ease 0s;
  }

  .feature-btn-prev-{{ section.id }}.swiper-button-disabled,
  .feature-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0;
  }

  .feature-pagination-{{ section.id }} {
    padding: {{ dots_mt }}px 0px;
    position: static !important;
    width: 100%;
    justify-content: center;
    align-items: center;
  }

  .feature-pagination-{{ section.id }} .swiper-pagination-bullet {
    width: {{ dots_size_mobile }}px;
    height: {{ dots_size_mobile }}px;
    border: 1px solid {{ dots_border_color }};
    background-color: transparent;
    opacity: 0.6;
  }

  .feature-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
    opacity: 1;
    background-color: {{ dots_color }}
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .feature-main-content-{{ section.id }} {
      max-width: {{ content_maxwidth }}%;
    }

    .feature-subheading-{{ section.id }} {
      text-align: {{ sub_heading_align }};
    }

    .feature-subheading-{{ section.id }} * {
      font-size: {{ sub_heading_size }}px;
    }

    .feature-heading-{{ section.id }} {
      margin-top: {{ heading_mt }}px;
      text-align: {{ heading_align }};
    }

    .feature-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .feature-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ text_align }};
    }

    .feature-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .feature-slider-{{ section.id }} {
      margin-left: 0px !important;
      margin-right: 0px !important;
      padding-left: 0px !important;
      padding-right: 0px !important;
    }

    .feature-slider-wrapper-{{ section.id }} {
      margin-top: {{ slider_mt }}px;
    }

    .feature-card-{{ section.id }} {
      padding: {{ card_padding_vertical }}px {{ card_padding_horizontal }}px;
    }

    .feature-icon-{{ section.id }} {
      max-width: {{ icon_width }}%;
    }

    .feature-title-{{ section.id }} {
      margin-top: {{ title_mt }}px;
      text-align: {{ title_align }};
      font-size: {{ title_size }}px;
    }

    .feature-card-text-{{ section.id }} {
      margin-top: {{ card_text_mt }}px;
      text-align: {{ card_text_align }};
      font-size: {{ card_text_size }}px;
    }

    .feature-btn-prev-{{ section.id }},
    .feature-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
    }

    .feature-btn-prev-{{ section.id }} {
      left: -{{ arrow_size | times: 0.5 }}px !important;
      transform: translate({{ arrow_size | times: 0.25 | round: 0 }}px,-50%);
    }
  
    .feature-btn-next-{{ section.id }} {
      right: -{{ arrow_size | times: 0.5 }}px !important;
      transform: translate(-{{ arrow_size | times: 0.25 | round: 0 }}px,-50%);
    }

    .feature-btn-prev-{{ section.id }} svg,
    .feature-btn-next-{{ section.id }} svg {
      height: {{ arrow_icon_size }}px;
      flex: 0 0 {{ arrow_icon_size }}px;
    }

    .feature-pagination-{{ section.id }} .swiper-pagination-bullet {
      width: {{ dots_size }}px;
      height: {{ dots_size }}px;
    }

  }
  
