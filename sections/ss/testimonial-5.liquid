                  <p class="testimonials-slide-text-{{ section.id }}">{{ block.settings.text }}</p>
                {% endif %}
            
                {% if block.settings.author != blank %}
                  <p class="testimonials-slide-author-{{ section.id }}">{{ block.settings.author }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
