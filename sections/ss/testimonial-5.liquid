        {% for block in section.blocks %}
            <div class="testimonials-item-{{ section.id }}">
                <div class="testimonials-slide-left-{{ section.id }}">
                  {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}">
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                </div>
              <div class="testimonials-slide-right-{{ section.id }}">
                {% if block.settings.stars_count != 0 %}
                  <div class="testimonials-stars-{{ section.id }}">
                      {% if stars_icon != blank %}
                        {% for item in (1..block.settings.stars_count) %}
                          <img src="{{ stars_icon | image_urll }}" alt="{{ stars_icon.alt }}">
                        {% endfor %}
                      {% else %}
                        {% for item in (1..block.settings.stars_count) %}
