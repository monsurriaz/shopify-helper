<!-- method 1: use display -webkit-box to fixed number of line -->
<style>
  .parent-wrapper {
    position: relative;
  }

  .parent-wrapper[aria-expanded="false"] .long-description {
    -webkit-line-clamp: 4;
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
  }

  button.morelink {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    padding: 0;
    border: none;
    text-transform: uppercase;
    cursor: pointer;
    gap: .3rem;
    background: linear-gradient(0deg, rgb(255 255 255) 15%, rgb(255 255 255 / 0%));
  }

  button.morelink:before {
    content: '';
    display: inline-block !important;
    border: solid;
    border-color: inherit;
    border-width: 0 3px 3px 0;
    border-radius: 0 1px 1px 0;
    padding: 8px;
    -webkit-backface-visibility: hidden;
    transform: rotate(45deg);
  }

  .parent-wrapper[aria-expanded="true"] .long-description {
    padding-bottom: 30px;
  }

  .parent-wrapper[aria-expanded="true"] button.morelink:before {
    transform: rotate(225deg);
  }

  .parent-wrapper[aria-expanded="true"] button.morelink {
    height: fit-content;
  }
</style>

