<style>
  .product__block-icon-text {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .product__block-icon-text img,
  .product__block-icon-text svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }
  .product__block-icon-text p {
    margin: 0;
    font-size: 14px;
    line-height: 1.4;
    color: #231C19;
  }
  .product__block-icon-text.justify-content-center {
    justify-content: center;
  }
</style>

